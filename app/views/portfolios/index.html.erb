<div class="container">
	<h1>Portfolio Items</h1>

	<%= link_to "Create new Portfolio", new_portfolio_url %>

	<table class="table">
	  <thead>
	    <tr>
	    	<th>Id</th>
	      <th>Title</th>
	      <th>Subtitle</th>
	      <th>Body</th>
	      <th>Thumb image</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @portfolio_items.each do |portfolio_item| %>
	      <tr>
	      	<td><%= portfolio_item.id %></td>
	        <td><%= portfolio_item.title %></td>
	        <td><%= portfolio_item.subtitle %></td>
	        <td><%= portfolio_item.body %></td>
	        <td><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></td>
	        <td><%= link_to 'Show', postolio_show_path(portfolio_item) %></td>
	        <td><%= link_to 'Edit', edit_portfolio_path(portfolio_item) %></td>
	        <td><%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>	
</div>


<br>
