<tr>
  <td><%= blog.title %></td>
  <td><%= blog.body %></td>
  <td><%= blog.status %></td>
  <td><%= link_to 'Show', blog %></td>
  <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
  <td><%= link_to 'Change status', toggle_status_blog_path(blog), method: :post, data: { confirm: 'Are you sure?' } %></td>
  <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>